    <script>
        const pages = document.querySelectorAll('.page');
        const navLinks = document.querySelectorAll('.nav-link');
        let currentCarouselIndex = 0;
        const carouselItems = document.querySelectorAll('.carousel-item');
        const carouselInterval = 5000; // 5 seconds
        let carouselTimer;
        
        // Mock data for rental properties
        const rentalProperties = [{
            title: 'Modern Apartment',
            price: 'TT$6,000/month',
            image: 'https://placehold.co/800x600/3182ce/ffffff?text=Modern+Apartment+Interior',
            description: 'This is a spacious and modern 2-bedroom apartment with stunning city views. Located in the heart of downtown Port of Spain, it offers easy access to all major amenities, shopping centers, and restaurants. The apartment features an open-concept living area, a fully equipped kitchen, and a private balcony.',
            features: ['2 Bedrooms', '2 Bathrooms', 'City View', 'Private Balcony', 'Central A/C']
        }, {
            title: 'Family Townhouse',
            price: 'TT$8,500/month',
            image: 'https://placehold.co/800x600/9f7aea/ffffff?text=Family+Townhouse+Exterior',
            description: 'A beautiful 3-bedroom townhouse perfect for a family. This property comes with a large private backyard, perfect for children and pets. It is situated in a quiet and safe neighbourhood with excellent schools nearby. The interior has been recently renovated with modern finishes and a spacious master suite.',
            features: ['3 Bedrooms', '2.5 Bathrooms', 'Private Backyard', 'Two-Car Garage', 'Pet-Friendly']
        }, ];

        // Mock data for purchase properties
        const purchaseProperties = [{
            title: 'Luxury Villa',
            price: 'TT$5,500,000',
            image: 'https://placehold.co/800x600/2b6cb0/ffffff?text=Luxury+Villa+Pool+and+Garden',
            description: 'This stunning 5-bedroom luxury villa offers an unparalleled living experience. It features a private infinity pool, expansive garden, and a breathtaking ocean view. The interior is designed with high-end finishes and an open floor plan, ideal for entertaining. It is located in an exclusive, gated community with 24/7 security.',
            features: ['5 Bedrooms', '5 Bathrooms', 'Private Pool', 'Ocean View', 'Gated Community']
        }, {
            title: 'Spacious House',
            price: 'TT$2,800,000',
            image: 'https://placehold.co/800x600/48bb78/ffffff?text=Spacious+House+Exterior',
            description: 'A comfortable and spacious 4-bedroom house with a large, manicured garden. This property is perfect for a growing family, offering ample space for both indoor and outdoor activities. Located in a quiet and friendly neighbourhood, it is close to schools, parks, and shopping centers.',
            features: ['4 Bedrooms', '3 Bathrooms', 'Large Garden', 'Two-Car Garage', 'Quiet Neighborhood']
        }, ];
        
        // Function to show a specific page
        function showPage(id, activeNavLinkId = id) {
            pages.forEach(page => page.classList.remove('active'));
            document.getElementById(id).classList.add('active');
            
            navLinks.forEach(link => link.classList.remove('active'));
            const currentNavLink = document.querySelector(`a[href="#${activeNavLinkId}"]`);
            if (currentNavLink) {
                currentNavLink.classList.add('active');
            }
            
            // Close the mobile menu when a link is clicked
            const mobileMenu = document.getElementById('mobile-menu');
            if (mobileMenu.classList.contains('active')) {
                toggleMobileMenu();
            }

            // Handle carousel animation
            if (id === 'home') {
                startCarousel();
            } else {
                stopCarousel();
            }
        }

        // Handle navigation clicks
        navLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const pageId = link.getAttribute('href').substring(1);
                showPage(pageId);
            });
        });

        // Toggle mobile menu visibility
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenu.classList.toggle('active');
        }

        // Set initial page and nav link state
        showPage('home');

        // Carousel functionality
        function showNextCarouselItem() {
            carouselItems[currentCarouselIndex].classList.remove('active');
            currentCarouselIndex = (currentCarouselIndex + 1) % carouselItems.length;
            carouselItems[currentCarouselIndex].classList.add('active');
        }

        function startCarousel() {
            if (carouselTimer) {
                clearInterval(carouselTimer);
            }
            carouselTimer = setInterval(showNextCarouselItem, carouselInterval);
        }

        function stopCarousel() {
            clearInterval(carouselTimer);
        }
        
        // Modal functions
        function showMessageModal(message) {
            const modal = document.getElementById('messageModal');
            const modalMessage = document.getElementById('modalMessage');
            modalMessage.textContent = message;
            modal.style.display = 'flex';
        }

        function closeModal() {
            const modal = document.getElementById('messageModal');
            modal.style.display = 'none';
        }

        // Forms and calculator functions
        function submitContactForm(event) {
            event.preventDefault();
            const name = document.getElementById('contactName').value;
            const email = document.getElementById('contactEmail').value;
            const message = document.getElementById('contactMessage').value;
            console.log(`Contact form submission from: ${name}, Email: ${email}, Message: ${message}`);
            showMessageModal('Your message has been sent successfully!');
            event.target.reset();
        }

        // Function to show details for a rental property
        function showRentalDetails(propertyTitle) {
            const property = rentalProperties.find(p => p.title === propertyTitle);
            if (!property) {
                showMessageModal('Property details not found.');
                return;
            }

            document.getElementById('rental-details-img').src = property.image;
            document.getElementById('rental-details-title').textContent = property.title;
            document.getElementById('rental-details-price').textContent = property.price;
            document.getElementById('rental-details-description').textContent = property.description;
            
            const featuresList = document.getElementById('rental-details-features');
            featuresList.innerHTML = '';
            property.features.forEach(feature => {
                const li = document.createElement('li');
                li.textContent = feature;
                featuresList.appendChild(li);
            });
            
            showPage('rental-details', 'rentals');
        }

        // Function to show details for a purchase property (no calculator)
        function showPurchaseDetails(propertyTitle) {
            const property = purchaseProperties.find(p => p.title === propertyTitle);
            if (!property) {
                showMessageModal('Property details not found.');
                return;
            }
            
            document.getElementById('purchase-details-img').src = property.image;
            document.getElementById('purchase-details-title').textContent = property.title;
            document.getElementById('purchase-details-price').textContent = property.price;
            document.getElementById('purchase-details-description').textContent = property.description;

            const featuresList = document.getElementById('purchase-details-features');
            featuresList.innerHTML = '';
            property.features.forEach(feature => {
                const li = document.createElement('li');
                li.textContent = feature;
                featuresList.appendChild(li);
            });

            showPage('purchase-details', 'purchase');
        }
        
        // Initial setup
        window.onload = function() {
            showPage('home');
            startCarousel();
        };

        // Close modal when clicking outside of it
        window.onclick = function(event) {
            const modal = document.getElementById('messageModal');
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        };

    </script>

</body>
</html>
